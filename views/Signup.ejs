<% include ./partials/header %>
<link rel="stylesheet" href="/css/Login.css">
<div class="whole">
    <div class="card ml-auto" id="form">
        <h4 class="center text">
            <i class="fa fa-wrench prefix fa-lg  px-2"></i>REPCARE</h4>
        <hr class="red my-1" width="100%" height="5%">
        <form action="/signup" method="POST">
            <h5><i class="material-icons prefix small px-2">account_circle</i>
                <lead>Username</lead>
            </h5>
            <div class="form-row my-1">
                <div class="col">
                    <input type="text" class="form-control" name="username" placeholder="Username" required>
                </div>

            </div>
            <h5><i class="material-icons prefix small px-2">call</i>
                <lead>Phone</lead>
            </h5>
            <div class="form-group">
                <input class="form-control" type="text"  maxlength="10"minlength="10" name="user[phoneno]" placeholder="e.g. 9478346370" required>
            </div>
            <h5><i class="material-icons prefix small px-2">email</i>
                <lead>Password</lead>
            </h5>

            <div class="form-group">
                <input class="form-control validate" type="password" name="password" placeholder="password" required>
            </div>
            <div class="form-group">
                <center><button class="btn red btn-lg">Sign Up</button></center>
            </div>
            <div class="center medium">Existing Users <a href="/Login" class="link">Log In></div>
        </form>

    </div>
</div>
<script>
    $(document).ready(function () {
        $('select').material_select();
    });
</script>
<% include ./partials/footer %>